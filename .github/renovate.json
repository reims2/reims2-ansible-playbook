{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimitNone",
    ":separateMajorReleases",
    "helpers:pinGitHubActionDigests",
    "schedule:weekends",
    ":automergePatch",
    ":automergePr",
    ":automergeDigest",
    "docker:pinDigests"
  ],
  "platformAutomerge": true,
  "ansible": {
    "fileMatch": [
      "(^|/)tasks/[^/]+\\.ya?ml$",
      "docker-compose\\.ya?ml(\\.j2)?$"
    ]
  }
}
