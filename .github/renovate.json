{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>reims2/renovate",
    ":automergeDigest"
  ],
  "ansible": {
    "fileMatch": [
      "(^|/)tasks/[^/]+\\.ya?ml$",
      "docker-compose\\.ya?ml(\\.j2)?$"
    ]
  },
  "packageRules": [
    {
      "matchPackagePrefixes": ["reims2"],
      "groupName": "reims2",
      "automerge": true
    }
  ]
}
