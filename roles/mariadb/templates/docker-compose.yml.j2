  mariadb:
    image: mariadb:11.2.2@sha256:9da6213d1a5714c4585c9c0003c51510b320d6f60e53d78701fe1e194126249f
    restart: always
    environment:
      MARIADB_ROOT_PASSWORD: '{{ reims2_db_root_password }}'
      MARIADB_DATABASE: '{{ reims2_db_name }}'
      MARIADB_USER: '{{ reims2_db_user }}'
      MARIADB_PASSWORD: '{{ reims2_db_password }}'
    volumes:
      - "{{ backend_db_location }}:/var/lib/mysql"
      - "{{ mariadb_cnf_location }}:/etc/mysql/conf.d/custom.cnf"
    networks:
      {{ db_network }}:
    command:
      - "--port={{ db_port }}"
    healthcheck:
        test: ["CMD", 'mariadb-admin', 'ping', '-h', 'localhost', '-uroot', '-p"{{ reims2_db_root_password }}"' ]
        timeout: 10s
        retries: 3
        start_period: 10s

    deploy:
      update_config:
        order: stop-first
        failure_action: rollback
        delay: 5s
      rollback_config:
        parallelism: 0
        order: stop-first
        delay: 5s
      restart_policy:
        condition: any
        delay: 5s
        max_attempts: 3
        window: 120s
